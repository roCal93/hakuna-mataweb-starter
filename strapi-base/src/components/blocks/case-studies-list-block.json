{
  "collectionName": "components_blocks_case_studies_list_blocks",
  "info": {
    "displayName": "Case Studies List",
    "description": "Block to display a list of case studies (manual or auto-filtered)"
  },
  "options": {},
  "attributes": {
    "mode": {
      "type": "enumeration",
      "enum": ["manual", "auto"],
      "default": "auto",
      "required": true
    },
    "selected_case_studies": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::case-study.case-study"
    },
    "filter_domains": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::domain.domain"
    },
    "filter_content_types": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::content-type-taxonomy.content-type-taxonomy"
    },
    "filter_tags": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::tag.tag"
    },
    "show_featured_only": {
      "type": "boolean",
      "default": false
    },
    "max_items": {
      "type": "integer",
      "default": 12
    },
    "sort_by": {
      "type": "enumeration",
      "enum": ["order", "date", "title"],
      "default": "order"
    },
    "show_filters": {
      "type": "boolean",
      "default": true
    },
    "layout": {
      "type": "enumeration",
      "enum": ["grid", "list", "masonry"],
      "default": "grid"
    },
    "columns": {
      "type": "enumeration",
      "enum": ["2", "3", "4"],
      "default": "3"
    }
  }
}
